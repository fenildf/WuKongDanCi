<h1>Listing words</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th>Mean</th>
      <th>W type</th>
      <th>Phonetic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
        <td><%= word.mean %></td>
        <td><%= word.w_type %></td>
        <td><%= word.phonetic %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= button_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

