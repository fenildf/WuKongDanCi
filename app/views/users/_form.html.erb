  <%= form_for @user, :html => {:role => "form"} do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger"  role="alert">
        <% @user.errors.full_messages.each do |message| %>
          <li ><%= message %></li>
        <% end %>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :username, :class => "form-control" , :placeholder => "用户名"   %>
    </div>
    <div class="form-group">
      <%= f.text_field :email, :class => "form-control" , :placeholder => "邮箱"   %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :class => "form-control" , :placeholder => "密码"  %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, :class => "form-control" , :placeholder => "密码确认"  %>
    </div>

    <div class="actions">
      <%= f.submit "注册", :class => "btn btn-primary full-width-btn"   %>
    </div>
  <% end %>