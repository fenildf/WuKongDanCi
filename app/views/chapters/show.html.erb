<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @chapter.name %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @chapter.desc %>
</p>

<p>
  <strong>Dict:</strong>
  <%= @chapter.dict.name %>
</p>

<hr>

<table class="table table-hover">
  <%= link_to '添加单词', new_chapter_word_path(@chapter), :class => "btn btn-success pull-right" %>

  <thead>
    <tr>
      <th>单词</th>
      <th>意思</th>
      <th>词性</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapter.words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
        <td><%= word.mean %></td>
        <td><%= word.w_type %></td>
        <td><%= link_to '显示', word %></td>
        <td><%= link_to '编辑', edit_word_path(word) %></td>
        <td><%= link_to '删除', word, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<hr>

<%= link_to '编辑章节信息', edit_chapter_path(@chapter), :class => "btn btn-default" %> |
<%= link_to '返回', chapters_path, :class => "btn btn-default"  %>
