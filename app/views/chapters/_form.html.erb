<%= form_for @chapter, :html => {:role => "form"}  do |f| %>
  <% if @chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

      <ul>
      <% @chapter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" name="chapter[dict_id]" value="<%= @dict.id %>" >

  <div class="form-group">
    <label>所属词典</label><br>
    <p class="btn btn-danger"><%= @dict.name %></p>
  </div>

  <div class="form-group">
    <label>章节名称</label><br>
    <%= f.text_field :name, :class => "form-control"   %>
  </div>
  <div class="form-group">
    <label>章节描述</label><br>
    <%= f.text_field :desc, :class => "form-control"   %>
  </div>

  <div class="actions">
    <%= f.submit '提交', :class => "btn btn-success" %>
  </div>
<% end %>
