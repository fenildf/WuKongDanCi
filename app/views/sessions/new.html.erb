
<div class="register_form">
  <h1>登陆</h1>

  <%= form_for @user, url: sessions_path, :html => {:role => "form"} do |f| %>

    <% if flash[:notice] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :email, :class => "form-control" , :placeholder => "邮箱"  %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :class => "form-control", :placeholder => "密码"  %>
    </div>

    <div class="actions">
      <%= f.submit "登陆", :class => "btn btn-primary full-width-btn" %>
    </div>
  <% end %>

  <hr>

</div>