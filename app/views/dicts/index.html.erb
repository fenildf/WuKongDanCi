<h1>词库
  <%= link_to '新建词库', new_dict_path, :class => "btn btn-success pull-right" %>
</h1>

<table class="table table-hover">

  <thead>
    <tr>
      <th>名称</th>
      <th>描述</th>
      <th>章节数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dicts.each do |dict| %>
      <tr>
        <td><%= dict.name %></td>
        <td><%= dict.desc %></td>
        <td><%= dict.chapters.count %></td>
        <td><%= link_to '显示', dict %></td>
        <td><%= link_to '编辑', edit_dict_path(dict) %></td>
        <td><%= link_to '删除', dict, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

